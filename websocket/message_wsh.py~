# -*- coding: utf-8 -*-
from mod_pywebsocket import msgutil
import redis

r = redis.Redis()
_GOODBYE_MESSAGE = '___ImDoneWithIt___'

def web_socket_do_extra_handshake(request):
    pass  # Always accept.

def web_socket_transfer_data(request):
    while True:
        nick = msgutil.receive_message(request)
        
        if (nick == '___ImDoneWithIt___'):
            return
            
        present_nicks = r.LRANGE('regs',0,-1)
        response = "comeonin"
        
        try:
            present_nicks.index(nick)
        except ValueError:
            response = "gtfo"

        if (response == "comeonin"):
            r.lpush ('regs',nick)
            
        msgutil.send_message(request, response)
